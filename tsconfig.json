{
  "compilerOptions": {
    // Core Language and Compilation Targets
    "target": "ES2022", // Updated to a more recent ECMAScript version
    "lib": ["dom", "dom.iterable", "esnext"],

    // Module and Compatibility
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // Strict Type Checking
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Additional Type Safety
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Project Compilation Settings
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,

    // React and Next.js Specific
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],

    // Path Aliases and Module Resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/types/*": ["./types/*"]
    },

    // Enhanced Type Checking
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "testFetchStudentData.mjs",
    "components/assignments/TestHeader"
  ],
  "exclude": ["node_modules", ".next"]
}
